<h1 class="font-bold text-3xl text-center mb-14">Registro de Proveedores</h1>
<div
  class="bg-grisesito flex flex-row justify-around rounded-md h-24 p-5 w-auto"
>
  <div class="text-grisfont font-bold">Fecha:</div>
  <div class="text-grisfont font-bold">Encargado del registro:</div>
</div>
<div class="flex flex-row justify-around p-1">
  <div
    class="flex flex-col border-black border-2 rounded-md h-auto p-5 w-full m-5"
  >
    <h1 class="text-2xl font-bold p-5 text-center">
      Informacion del proveedor
    </h1>
    <div class="justify-between sm:flex sm:flex-row *:}flex flex-row">
      <div>
        <h3>Nombre</h3>
        <input
          class="bg-grisinpu rounded-md border-none w-70"
          type="text"
          placeholder="nombre"
        />
      </div>
      <div>
        <h3>Tipo de documento</h3>
        <form>
          <select class="bg-grisinpu rounded-md border-none w-50">
            <option>Tipo documento </option>
            <option>Cedula </option>
            <option>NIT </option>
          </select>
        </form>
      </div>
      <div>
        <h3>Número de documento</h3>
        <input
          class="bg-grisinpu rounded-md border-none w-70"
          type="text"
          placeholder="000000000"
        />
      </div>
      <div>
        <h3>Número de telefono</h3>
        <input
          class="bg-grisinpu rounded-md border-none w-70"
          type="text"
          placeholder="0000000000"
        />
      </div>
    </div>
    <div class="flex flex-row justify-between">
      <div>
        <h3>Correo electronico</h3>
        <input
          class="bg-grisinpu rounded-md border-none w-70"
          type="text"
          placeholder="corre@correo.com"
        />
      </div>
      <div>
        <h3>Dirección</h3>
        <input
          class="bg-grisinpu rounded-md border-none w-70"
          type="text"
          placeholder="cra #"
        />
      </div>
      <div>
        <h3>Encargado</h3>
        <input
          class="bg-grisinpu rounded-md border-none w-70"
          type="text"
          placeholder="nombre"
        />
      </div>
    </div>
  </div>
</div>
<div class="flex justify-end m-5 space-x-5">
  <button class="bg-black text-white rounded-md p-2 w-40">Cancelar</button>
  <button class="bg-blue-baby4 text-white rounded-md p-2 w-52">Registrar</button
  >
</div>
