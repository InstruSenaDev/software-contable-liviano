<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:wght@400;700&display=swap">

<header class="flex items-center p-4 bg-blue-baby4 shadow w-full md:items-end md:justify-end h-50">
  <div class="md:flex md:flex-row p-2">
    <div id="openModalButton" class="flex flex-col text-sm p-2">
      <span id="user_name" class="text-white font-bold font-display"></span>
    </div>
  </div>
</header>

<div class="relative">
  <!-- Modal -->
  <div id="modal" class="flex justify-end fixed inset-0 hidden bg-black bg-opacity-25 z-50">
    <div class="bg-white p-6 rounded-lg shadow-lg relative w-52 h-40 mt-24 max-w-lg flex flex-col items-center">
      <!-- Contenido del modal -->
      <span id="modal_user_name" class="text-blue-baby4 text-center flex justify-center font-display font-bold flex-col mb-5"></span>
      <a class="flex flex-row hover:bg-blue-baby3 rounded-md" href="/perfilUsuario">
        <img class="w-4 item-center m-2" src="../../../public/img/black/edit2.svg" alt="">
        <button class=" hover:text-white  p-2 ">Editar Perfil</button>
      </a>
      <button id="logoutButton" class=" hover:bg-blue-baby3 hover:text-white rounded-md flex flex-row text-center "> 
        <img class="w-4 item-center m-2" src="../../../public/img/black/Logout.svg" alt="">
        Cerrar Sesi√≥n
      </button>
      <button id="closeModalButton" class="absolute top-2 right-2 text-gray-500 hover:text-gray-700">&times;</button>
    </div>
  </div>
</div>

<div
  id="modal-success"
  class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-end p-5 justify-end hidden"
>
  <div class="bg-white rounded-md shadow-lg flex flex-row w-96 p-2">
    <img class="w-9 h-auto p-2" src="../../../../public/img/Check.svg" alt="" />
    <p class="text-green-600 p-2">Cerrando sesion</p>
  </div>
</div>

<div
  id="modal-error"
  class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-end p-5 justify-end hidden"
>
  <div class="bg-white rounded-md shadow-lg flex flex-row w-96 p-2">
    <img class="w-9 h-auto p-2" src="../../../../public/img/Error.svg" alt="" />
    <p class="text-rojing p-2">Error al cerrar sesion</p>
  </div>
</div>
<!-- Enlace al archivo JavaScript externo -->
