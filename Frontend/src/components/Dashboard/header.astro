<header
  class="flex items-center p-4 bg-blue-baby4 shadow w-full md:items-end md:justify-end"
>
  <div class="md:flex md:flex-row p-2">
    <div class="flex flex-col text-sm p-2">
      <span id="user_email" class="text-white"></span>
    </div>
    <div class="bg-white text-black p-2 rounded-md">
      <a href="/perfilUsuario">
        <button>Editar perfil</button>
      </a>
    </div>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const email = localStorage.getItem("email");

    if (email) {
      document.getElementById("user_email").textContent = email;
    } else {
      document.getElementById("user_email").textContent = "Usuario desconocido";
    }
  });
</script>
