<body>
  
</body>
<h1 class="font-bold text-3xl text-center mb-4">Registro de Proveedores</h1>
<div
  class="bg-grisesito flex flex-row justify-around rounded-md h-24 p-5 w-full"
>
  <span class="flex flex-col text-grisfont">
    <div class="font-bold">Fecha:</div>
    <span id="fecha"></span>
  </span>
  <span class="flex flex-col text-grisfont">
    <div class="text-grisfont font-bold">Hora:</div>
    <span id="hora"></span>
  </span>
  <span>
    <div class="text-grisfont font-bold">Encargado del registro:</div>
    <span class="text-grisfont " id="user_names"></span>
  </span>
</div>
<div class="flex flex-row justify-around p-1">
  <div
    class="flex flex-col border-black border-2 rounded-md h-auto p-5 w-full m-5"
  >
    <h1 class="text-2xl font-bold p-2 text-center">
      Informacion del proveedor
    </h1>
    <form action="" id="formProviders">
      <div class="justify-between sm:flex sm:flex-row flex flex-row">
        <div class="p-2 flex flex-col">
          <h3>Nombre</h3>
          <input
            id="nombre"
            class="bg-grisinpu rounded-md border-none w-70"
            type="text"
            placeholder="nombre"
          />
          <span id="error-nombre" class="text-red-500 text-sm hidden"></span>
        </div>
        <div class="p-2 flex flex-col">
          <h3>Tipo de documento</h3>
          <select
            id="tipo-documento"
            class="bg-grisinpu rounded-md border-none w-50"
          >
            <option value="">Tipo documento</option>
            <option value="1">Cédula</option>
            <option value="2">NIT</option>
          </select>
          <span id="error-tipo-documento" class="text-red-500 text-sm hidden"
          ></span>
        </div>
        <div class="p-2 flex flex-col">
          <h3>Número de documento</h3>
          <input
            id="numero-documento"
            class="bg-grisinpu rounded-md border-none w-70"
            type="text"
            placeholder="000000000"
          />
          <span id="error-numero-documento" class="text-red-500 text-sm hidden"
          ></span>
        </div>
        <div class="p-2 flex flex-col">
          <h3>Número de teléfono</h3>
          <input
            id="numero-telefono"
            class="bg-grisinpu rounded-md border-none w-70"
            type="text"
            placeholder="0000000000"
          />
          <span id="error-numero-telefono" class="text-red-500 text-sm hidden"
          ></span>
        </div>
      </div>
      <div class="flex flex-row justify-between">
        <div class="p-2 flex flex-col">
          <h3>Correo electrónico</h3>
          <input
            id="correo-electronico"
            class="bg-grisinpu rounded-md border-none w-70"
            type="text"
            placeholder="correo@correo.com"
          />
          <span
            id="error-correo-electronico"
            class="text-red-500 text-sm hidden"></span>
        </div>
        <div class="p-2 flex flex-col">
          <h3>Dirección</h3>
          <input
            id="direccion"
            class="bg-grisinpu rounded-md border-none w-70"
            type="text"
            placeholder="cra #"
          />
          <span id="error-direccion" class="text-red-500 text-sm hidden"></span>
        </div>
        <div class="p-2 flex flex-col">
          <h3>Encargado</h3>
          <input
            id="encargado"
            class="bg-grisinpu rounded-md border-none w-70"
            type="text"
            placeholder="nombre"
          />
          <span id="error-encargado" class="text-red-500 text-sm hidden"></span>
        </div>
      </div>
    </form>
  </div>
</div>
<div class="flex justify-end space-x-5">
  <button
    type="button"
    id="cancelar"
    class="bg-black text-white rounded-md p-2 w-40">Cancelar</button
  >
  <button
    type="button"
    id="submit"
    class="bg-blue-baby4 text-white rounded-md p-2 w-52">Registrar</button
  >
</div>

<div
  id="modal-successx"
  class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-end p-5 justify-end hidden"
>
  <div class="bg-white rounded-md shadow-lg flex flex-row w-96 p-2">
    <img class="w-9 h-auto p-2" src="../../../../public/img/Check.svg" alt="" />
    <p class="text-green-600 p-2">Registro exitoso</p>
  </div>
</div>

<div
  id="modal-errorx"
  class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-end p-5 justify-end hidden"
>
  <div class="bg-white rounded-md shadow-lg flex flex-row w-96 p-2">
    <img class="w-9 h-auto p-2" src="../../../../public/img/Error.svg" alt="" />
    <p class="text-rojing p-2">Error en el registro</p>
  </div>
</div>
<script src="../../../js/ValidacionUsuario"></script>
<script>
  import { updateClock } from "../../../js/formatoFH.js";
  import { validateForm, submitForm } from "../../../js/providersForm";

  document.addEventListener("DOMContentLoaded", () => {
    updateClock();
  });

  document.getElementById("submit").addEventListener("click", () => {
    validateForm();
  });

  document.getElementById("submit").addEventListener("click", () => {
    submitForm();
  });
</script>
